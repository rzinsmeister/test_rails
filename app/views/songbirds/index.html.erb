<h1>Listing songbirds</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Song</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songbirds.each do |songbird| %>
  <tr>
    <td><%= songbird.title %></td>
    <td><%= songbird.song %></td>
    <td><%= link_to 'Show', songbird %></td>
    <td><%= link_to 'Edit', edit_songbird_path(songbird) %></td>
    <td><%= link_to 'Destroy', songbird, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

